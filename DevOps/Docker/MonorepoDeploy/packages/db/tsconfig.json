{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "lib": ["ESNext"],
    "target": "ESNext",

    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": false,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
